{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "dirindex.meta.json schema",
  "type": "object",
  "properties": {
    "repo": {
      "type": "string",
      "description": "<owner>/<repo>"
    },
    "path": {
      "type": "string",
      "description": "Ordnerpfad relativ zum Repo-Root"
    },
    "title": {
      "type": "string"
    },
    "updated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "stable",
        "archived"
      ]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "links": {
      "type": "object",
      "properties": {
        "docs": {
          "type": "string"
        },
        "paper": {
          "type": "string"
        },
        "demo": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "required": [
    "repo",
    "path",
    "title",
    "updated"
  ]
}